{
  "cbt_stages": {
    "stage_1": {
      "name": "识别自动思维",
      "description": "识别情绪反应、引发事件和自动思维",
      "max_dialogues": 6,
      "completion_criteria": {
        "required_elements": [
          "情绪识别",
          "引发事件识别", 
          "自动思维识别"
        ],
        "completion_threshold": 3
      },
      "stage_goals": [
        "帮助来访者记录情绪反应并评分",
        "识别导致负面情绪的具体事件",
        "捕捉自动出现的负面思维"
      ],
      "sub_questions": [
        "最近一次让你感到非常焦虑的具体情境是什么？能描述一下当时发生了什么吗？",
        "当时你最先想到的念头/评价是什么？",
        "这些念头出现时，你的情绪感受是怎样的？请用0-10打分。"
      ],
      "techniques": [
        "情绪评分(0-10)",
        "事件详述",
        "思维记录",
        "当下觉察"
      ]
    },
    "stage_2": {
      "name": "确定思想陷阱",
      "description": "识别和分析思想陷阱类型",
      "max_dialogues": 5,
      "completion_criteria": {
        "required_elements": [
          "思想陷阱识别",
          "陷阱类型分析"
        ],
        "completion_threshold": 2
      },
      "stage_goals": [
        "教育来访者了解常见思想陷阱",
        "分析来访者的自动思维属于哪种陷阱",
        "增强来访者对思维模式的觉察"
      ],
      "sub_questions": [
        "你认为刚才那些自动出现的想法中，哪些可能是把事情极端化或以偏概全？",
        "有没有例子让你感觉像是把所有失败都归结为自己的能力不足？",
        "你能想到支持或反驳这些想法的事实吗？"
      ],
      "techniques": [
        "心理教育",
        "思维分类",
        "模式识别"
      ],
      "thought_traps": [
        "非黑即白",
        "打沉自己", 
        "大难临头",
        "以偏概全",
        "揽过于己",
        "怨天尤人",
        "妄下判断",
        "猜度人意",
        "情绪推理"
      ]
    },
    "stage_3": {
      "name": "挑战自动思维",
      "description": "质疑并寻找证据挑战负面自动思维",
      "max_dialogues": 7,
      "completion_criteria": {
        "required_elements": [
          "质疑自动思维",
          "寻找支持证据",
          "寻找反对证据"
        ],
        "completion_threshold": 3
      },
      "stage_goals": [
        "引导来访者质疑自动思维的真实性",
        "帮助寻找支持和反对证据",
        "培养批判性思维能力"
      ],
      "sub_questions": [
        "你觉得刚才的想法有哪些证据支持它？",
        "有哪些事实可以反驳这个想法？",
        "如果把这个想法交给朋友评判，他们会怎么看？"
      ],
      "techniques": [
        "苏格拉底式提问",
        "证据收集",
        "思维实验",
        "视角转换"
      ]
    },
    "stage_4": {
      "name": "回归现实思维",
      "description": "建立平衡现实的思维模式和行动计划",
      "max_dialogues": 6,
      "completion_criteria": {
        "required_elements": [
          "现实思维重构",
          "积极证据积累",
          "行动计划制定"
        ],
        "completion_threshold": 3
      },
      "stage_goals": [
        "帮助来访者形成更平衡现实的思维",
        "积累积极的自我证据",
        "制定具体可行的行动计划"
      ],
      "sub_questions": [
        "你能想到一件证明你能力或努力是有价值的具体事例吗？",
        "在接下来的两周里，你愿意尝试的小步骤行动计划有哪些？",
        "如果遇到阻力，你会如何调整策略？"
      ],
      "techniques": [
        "认知重构",
        "优势发现",
        "目标设定",
        "行为计划"
      ]
    }
  },
  "reinforcement_learning": {
    "initial_topic_score": 5,
    "reward_system": {
      "highly_relevant": 2,
      "moderately_relevant": 1,
      "slightly_relevant": 0,
      "irrelevant": -1,
      "off_topic": -2
    },
    "topic_threshold": {
      "continue_topic": 7,
      "switch_topic": 3
    }
  }
}
